<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Hibernate.reply" table="reply">
        <id column="reply_id" name="reply_id">
            <generator class="increment"/>
        </id>
        <property column="bar_id" name="bar_id"/>
        <property column="post_id" name="post_id"/>
        <property column="reply_date" name="reply_date"/>
        <property column="reply_msg" name="reply_msg"/>
        <property column="user_id" name="user_id"/>
        <property column="exist" name="exist"/>
        <property column="available" name="available"/>
    </class>
</hibernate-mapping>
