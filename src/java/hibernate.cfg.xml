<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/digu</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="connection.characterEncoding">utf8</property>
    <mapping resource="Hibernate/user.hbm.xml"/>
    <mapping resource="Hibernate/bar.hbm.xml"/>
    <mapping resource="Hibernate/chat.hbm.xml"/>
    <mapping resource="Hibernate/msg.hbm.xml"/>
    <mapping resource="Hibernate/pic.hbm.xml"/>
    <mapping resource="Hibernate/post.hbm.xml"/>
    <mapping resource="Hibernate/reply.hbm.xml"/>
    <mapping resource="Hibernate/star_bar.hbm.xml"/>
    <mapping resource="Hibernate/star_user.hbm.xml"/>
    <mapping resource="Hibernate/teacher.hbm.xml"/>
    <mapping resource="Hibernate/admin.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
